<%- include('../header') %>

<!-- Page Heading -->
<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Cadastrar Tarefa</h1>
  <div class="card shadow">
    <div class="row pl-3 pr-3 pt-1">
      <div class="col-md-12 mx-auto">
        <form action="/tarefa" method="POST">
          <div class="mb-1">
            <label for="descricao" class="pl-1 col-form-label col-form-label-sm"
              >Descrição:</label
            >
            <input
              type="text"
              name="descricao"
              class="form-control form-control-md"
              placeholder="Informe a descrição da tarefa..."
              required
            />
          </div>
          <div class="mb-1">
            <label for="status" class="pl-1 col-form-label col-form-label-sm"
              >Status:</label
            >
            <select
              name="status"
              id="status"
              class="form-control form-control-md"
              disabled
            >
              <option value="1">Aberto</option>
            </select>
          </div>
          <div class="mb-1 row">
            <div class="col">
              <label
                for="dataCadastro"
                class="pl-1 col-form-label col-form-label-sm"
                >Data de Cadastro:</label
              >
              <input
                type="date"
                step="1"
                name="dataCadastro"
                class="form-control form-control-md "
                disabled
              />
            </div>
            <div class="col">
              <label
                for="dataFinalizado"
                class="pl-1 col-form-label col-form-label-sm "
                >Data de Finalização:</label
              >
              <input
                type="date"
                step="1"
                name="dataFinalizado"
                class="form-control form-control-md disabled"
                disabled
              />
            </div>
          </div>
          <div class="mb-3 mt-3 d-grid">
            <input
              type="submit"
              name="submit"
              value="Gravar"
              class="btn btn-primary btn-md"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../footer') %>
